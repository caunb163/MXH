            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toStartOf="@+id/post_5_img5"
            app:layout_constraintStart_toEndOf="@id/post_5_img3"
            app:layout_constraintTop_toTopOf="@id/post_5_img3" />

        <ImageView
