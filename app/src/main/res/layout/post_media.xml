            android:scaleType="centerCrop"
            android:src="@drawable/image_default"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_5_img4"
            app:layout_constraintTop_toTopOf="@id/post_5_img3" />

        <TextView
            android:id="@+id/post_tv_img_number"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:gravity="center"
            android:text="+5"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/post_5_img5"
            app:layout_constraintEnd_toEndOf="@id/post_5_img5"
            app:layout_constraintStart_toStartOf="@id/post_5_img5"
            app:layout_constraintTop_toTopOf="@id/post_5_img5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>