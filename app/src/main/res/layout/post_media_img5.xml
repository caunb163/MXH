<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/media_5_image_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toStartOf="@id/media_5_image_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/media_5_image_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/media_5_image_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/media_5_image_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/media_5_image_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_5_image_1" />

    <ImageView
        android:id="@+id/media_5_image_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/media_5_image_5"
        app:layout_constraintStart_toEndOf="@id/media_5_image_3"
        app:layout_constraintTop_toTopOf="@id/media_5_image_3" />


    <ImageView
        android:id="@+id/media_5_image_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/media_5_image_4"
        app:layout_constraintTop_toTopOf="@id/media_5_image_3" />

    <TextView
        android:id="@+id/media_5_load_more"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#70000000"
        android:gravity="center"
        android:padding="32dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/media_5_image_5"
        app:layout_constraintEnd_toEndOf="@+id/media_5_image_5"
        app:layout_constraintStart_toStartOf="@+id/media_5_image_5"
        app:layout_constraintTop_toTopOf="@+id/media_5_image_5"
        tools:text="+3"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>